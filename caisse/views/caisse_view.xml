<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>       
<record id="view_caisse_pos_form" model="ir.ui.view">
            <field name="name">Pos.ext</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
               <xpath expr="//button[@name='action_pos_session_validate']" position="after">
                <button name="transferer" type="object" string="Sortie de caisse" attrs="{'invisible' : ['|', ('compta', '=', True),('state', '!=', 'closed')]}" class="oe_highlight" groups="account.group_account_manager"/>
		<button name="transferer2" type="object" string="Remise en banque" attrs="{'invisible' : ['|', ('remis', '=', True),('compta', '!=', True)]}" class="oe_highlight" groups="account.group_account_manager"/>       
                </xpath>
               <xpath expr="//field[@name='name']" position="after">
                                <field name="compta"/>
		                <field name="remis"/>
                </xpath>
            </field>
        </record>
	 </data>
</openerp>
